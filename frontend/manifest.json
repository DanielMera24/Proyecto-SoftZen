{
  "name": "SoftZen - Yoga Terapéutico Optimizado",
  "short_name": "SoftZen",
  "description": "Plataforma de yoga terapéutico optimizada para instructores y pacientes. Rendimiento, sostenibilidad y escalabilidad.",
  "version": "2.1.1",
  
  "start_url": "/",
  "scope": "/",
  "id": "softzen-yoga-therapeutico",
  
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#667eea",
  
  "categories": [
    "health",
    "fitness",
    "lifestyle",
    "wellness",
    "medical",
    "education"
  ],
  
  "lang": "es",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "/icons/favicon-32x32.svg",
      "sizes": "32x32",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-144x144.svg",
      "sizes": "144x144",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-152x152.svg",
      "sizes": "152x152",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Nueva Sesión",
      "short_name": "Sesión",
      "description": "Crear una nueva sesión terapéutica",
      "url": "/sessions/new",
      "icons": [
        {
          "src": "/icons/icon-192x192.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Mis Pacientes",
      "short_name": "Pacientes",
      "description": "Ver lista de pacientes asignados",
      "url": "/patients",
      "icons": [
        {
          "src": "/icons/icon-192x192.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "offline_capable": true,
  
  "permissions": [
    "notifications",
    "background-sync"
  ],
  
  "custom": {
    "app_info": {
      "version": "2.1.1",
      "build": "20250102-fixed",
      "environment": "production"
    },
    "optimization": {
      "cache_strategy": "stale-while-revalidate",
      "offline_support": true,
      "push_notifications": true,
      "background_sync": true
    },
    "features": {
      "patient_management": true,
      "session_tracking": true,
      "therapy_series": true,
      "analytics": true,
      "export_data": true,
      "offline_mode": true,
      "real_time_sync": true
    },
    "performance": {
      "lazy_loading": true,
      "code_splitting": true,
      "image_optimization": true,
      "service_worker": true
    },
    "accessibility": {
      "screen_reader": true,
      "high_contrast": true,
      "keyboard_navigation": true,
      "responsive_design": true
    },
    "security": {
      "https_only": true,
      "csp_enabled": true,
      "firebase_auth": true,
      "data_encryption": true
    }
  }
}